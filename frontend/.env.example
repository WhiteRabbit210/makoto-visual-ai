# 開発環境設定
VITE_API_BASE_URL=http://localhost:8000

# AWS設定（本番環境）
VITE_API_GATEWAY_URL=https://api.example.com
VITE_CLOUDFRONT_URL=https://cdn.example.com
VITE_S3_BUCKET_NAME=makoto-assets
VITE_AWS_REGION=ap-northeast-1

# 認証設定
VITE_REQUIRE_AUTH=false
VITE_AUTH_ENDPOINT=/api/auth

# 機能フラグ
VITE_ENABLE_IMAGE_GENERATION=true
VITE_ENABLE_AUDIO_PROCESSING=true
VITE_ENABLE_TASK_MANAGEMENT=true

# タイムアウト設定（ミリ秒）
VITE_API_TIMEOUT=20000
VITE_UPLOAD_TIMEOUT=30000
VITE_SSE_TIMEOUT=60000

# デバッグ設定
VITE_DEBUG_MODE=false
VITE_LOG_LEVEL=info